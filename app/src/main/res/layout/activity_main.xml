<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/rngTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Random Number Game"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/game"
        android:gravity="center"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        />
        <LinearLayout
            android:id="@+id/rangeBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:background="@drawable/seter_design"
            app:layout_constraintTop_toBottomOf="@id/rngTV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
           >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Range:"
                android:textSize="20sp"
                android:textStyle="italic"
                />
            <EditText
                android:id="@+id/setRangeET"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/setTimerBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:background="@drawable/seter_design"
        app:layout_constraintTop_toBottomOf="@id/rangeBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Timer:"
            android:textSize="20sp"
            android:textStyle="italic"
            />
        <EditText
            android:id="@+id/setTimerET"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/player1Box"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingHorizontal="25dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/players_bg"
        app:layout_constraintTop_toBottomOf="@id/setTimerBox"
        >
        <TextView
            android:id="@+id/player1TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 1:"
            android:textSize="20sp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/score1TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score:"
            android:textSize="20sp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/player2Box"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingHorizontal="25dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/players_bg"
        app:layout_constraintTop_toBottomOf="@id/player1Box"
        >
    <TextView
        android:id="@+id/player2TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 2:"
        android:textSize="20sp"
        android:layout_weight="1"
        />
    <TextView
        android:id="@+id/score2TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score:"
        android:textSize="20sp"
        android:layout_weight="1"
        />
    </LinearLayout>
    <Button
        android:id="@+id/rollButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:textSize="18sp"
        android:padding="12dp"
        android:backgroundTint="@color/black"
        android:textColor="#FFFFFF"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/player2Box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/resetBtn"
        />

    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/rollButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/timerTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/resetBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:textSize="18sp"
        android:padding="12dp"
        android:backgroundTint="@color/resetBtn"
        android:textColor="#FFFFFF"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/player2Box"
        app:layout_constraintStart_toEndOf="@id/rollButton"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>